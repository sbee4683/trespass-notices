<h1>Create New User</h1>
<%= form_for(@user, html: {class: "form-horizontal"}) do |f| %>
    <%= render 'layouts/user_error_messages' %>

    <div class="form-group row">
        <div class="col-sm-2 text-right">
            <%= f.label :name, "Name: ", class: "control-label" %>
        </div>
        <div class="col-sm-5">
            <%= f.text_field :name, class: "form-control"  %>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2 text-right">
            <%= f.label :username, "Username: ", class: "control-label" %>
        </div>
        <div class="col-sm-5">
            <%= f.text_field :username, class: "form-control"  %>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2 text-right">
            <%= f.label :email, "Email: ", class: "control-label" %>
        </div>
        <div class="col-sm-5">
            <%= f.email_field :email, value: params[:email], class: "form-control", type: "email"  %>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2 text-right">
            <%= f.label :password, "Password: ", class: "control-label" %>
        </div>
        <div class="col-sm-5">
            <%= f.password_field :password, class: "form-control"  %>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2 text-right">
            <%= f.label :password_confirmation, "Confirmation: ", class: "control-label" %>
        </div>
        <div class="col-sm-5">
            <%= f.password_field :password_confirmation, class: "form-control"  %>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2 text-right">
            <%= f.label :usertype, "Type: ", class: "control-label" %>
        </div>
        <div class="col-sm-5">
            <%= f.radio_button :usertype, "officer" %>
            <%= f.label :usertype_officer, "Officer" %></br>
            <%= f.radio_button :usertype, "dispatcher" %>
            <%= f.label :usertype_officer, "Dispatcher" %></br>
            <%= f.radio_button :usertype, "admin" %>
            <%= f.label :usertype_officer, "Admin" %>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2 col-sm-offset-2">
            <%= f.submit "Create account", class: "btn btn-primary" %>
        </div>
    </div>

  
<% end %>