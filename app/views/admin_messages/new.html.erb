<div class="row">
    <div class="col-sm-4 col-sm-offset-4">
        <div class="panel panel-default login-panel">
            <div class="panel-body">
                <%= form_for(@adminMessage) do |f| %>
                    <div class="form-group">
                        <%= f.label :msg, "Enter your email to request account" %>
                        <%= f.text_field :msg, class: 'form-control' %>
                    </div>
                    <div class="form-group">
                        <%= f.hidden_field :msgType, :value => "Account Request"%>
                        <%= f.submit "Request Account", class: "btn btn-primary" %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>
